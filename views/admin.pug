head
  title Admin | Diskmaskin
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/bootstrap.min.css')
  script(src='/jquery.js')
  script(src='/admin.js')

body
  div.page-header.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    //- var days = [ 'Söndag', 'Måndag', 'Tisdag', 'Onsdag', 'Torsdag', 'Fredag', 'Lördag'];
    table
      tr 
        th #{header}
        th Person
      each val, index in days
        tr
          td= days[index]
          td 
            input.person(type='text' value=sch[index].person id=index)
            button.updateButton(type='submit' id=index) Set
            
    if requirePass
      input#password(type='text' placeholder='admin password')
      p#message
